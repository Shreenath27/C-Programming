//Display largest of three numbers using a nested if else statement
#include <stdio.h>

void main()
{
    int a, b, c;

    printf("Enter three numbers:\n");
    scanf("%d %d %d", &a, &b, &c);

    if (a > b)
    {
        if (a > c)
            printf("%d is the largest number\n", a);
        else
            printf("%d is the largest number\n", b);
    }
    else if (b > c)
        printf("%d is the largest number\n", b);
    else
        printf("%d is the largest number\n", c);
}
